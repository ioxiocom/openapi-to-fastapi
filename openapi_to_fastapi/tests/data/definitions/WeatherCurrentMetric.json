  "components": {
    "schemas": {
      "BadGateway": {
        "properties": {},
        "type": "object",
        "title": "BadGateway",
        "description": "This response is reserved by Product Gateway."
      },
      "CurrentWeatherMetricRequest": {
        "properties": {
          "lat": {
            "type": "number",
            "maximum": 90.0,
            "minimum": -90.0,
            "title": "Latitude",
            "description": "The latitude coordinate of the desired location",
            "examples": [60.192059]
          },
          "lon": {
            "type": "number",
            "maximum": 180.0,
            "minimum": -180.0,
            "title": "Longitude",
            "description": "The longitude coordinate of the desired location",
            "examples": [24.945831]
          }
        },
        "type": "object",
        "required": ["lat", "lon"],
        "title": "CurrentWeatherMetricRequest"
      },
      "CurrentWeatherMetricResponse": {
        "properties": {
          "humidity": {
            "type": "number",
            "title": "Current relative air humidity in %",
            "examples": [72]
          },
          "pressure": {
            "type": "number",
            "title": "Current air pressure in hPa",
            "examples": [1007]
          },
          "rain": {
            "type": "boolean",
            "title": "Rain status",
            "description": "If it's currently raining or not."
          },
          "temp": {
            "type": "number",
            "minimum": -273.15,
            "title": "Current temperature in Celsius",
            "examples": [17.3]
          },
          "windSpeed": {
            "type": "number",
            "minimum": 0.0,
            "title": "Current wind speed in m/s",
            "examples": [2.1]
          },
          "windDirection": {
            "type": "number",
            "maximum": 360.0,
            "minimum": 0.0,
            "title": "Current wind direction in meteorological wind direction degrees",
            "examples": [220.0]
          }
        },
        "type": "object",
        "required": [
          "humidity",
          "pressure",
          "rain",
          "temp",
          "windSpeed",
          "windDirection"
        ],
        "title": "CurrentWeatherMetricResponse"
